{% extends 'base.front.html.twig' %}

{% block body %}

<div class="col-12">
{% for message in app.flashes('message') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Trips</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
{% if trips is not empty %}
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                   <th>id</th>
                   <th>guide</th>
                    <th>name</th>
                    <th>date</th>
                    <th>Sejour</th>
                    <th>Prix</th>                       
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for trip in trips %}
                    <tr>
                    <td>{{ trip.id }}</td>
                    <td>{{ trip.guide.name }} </td>
                    <td>{{ trip.name }} </td>
                    <td>{{ trip.date | date('d/m/Y') }}</td>
                    <td>{{ trip.nbsejour }} </td>
                    <td>{{ trip.prix }} </td>                      
                    <td> <a class="btn btn-block btn-danger" href="/user/reservation/new/{{ trip.id }}">reserver</a></td>
                    </tr>
                {% endfor %} 
                  </tbody>
                  <tfoot>
                  <tr>
                  <th>id</th>
                   <th>guide</th>
                    <th>name</th>
                    <th>date</th>
                    <th>Sejour</th>
                    <th>Prix</th>                       
                    <th>Action</th>                    
                  </tr>
                  </tfoot>
                </table>
                {% else %}
            <p>No trips found.</p>
        {% endif %}
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
{% endblock %}
